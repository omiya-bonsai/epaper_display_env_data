# =========================================================================
#  e-Paper Display System - Sample .env (public-safe)
#  ※このファイルは公開してOKなダミー設定例です。実運用では .env を使ってください。
# =========================================================================

# --- MQTT Broker ---
# ブローカーのIP/ホスト名（ダミー値）
MQTT_BROKER_IP_ADDRESS="192.168.x.x"
# ポート
MQTT_BROKER_PORT=1883
# Keepalive秒
MQTT_KEEPALIVE=60
# 任意のクライアントID（ダミー）
MQTT_CLIENT_ID="epaper_display_subscriber"

# --- MQTT Topics ---
# ※スクリプトは以下の環境変数名を参照します（名称を変えないでください）
MQTT_TOPIC_QZSS_CPU_TEMP="sensors/ads/cpu_temp"     # ADS側CPU温度（旧QZSS表記互換）
MQTT_TOPIC_PI_CPU_TEMP="sensors/pi/cpu_temp"        # Pi側CPU温度（vcgencmd出力想定）
MQTT_TOPIC_ENV4="sensors/environment/bme280"        # 温度・湿度
MQTT_TOPIC_CO2_DATA="sensors/environment/co2"       # CO2（device_id=pico_w_productionのみ処理）
MQTT_TOPIC_SENSOR_DATA="sensors/environment/thi"    # THI（device_id=pico_w_productionのみ処理）
MQTT_TOPIC_RAIN="home/weather/rain_sensor"          # ← 重要：スクリプトは MQTT_TOPIC_RAIN を参照

# --- System Service Monitoring ---
# 監視対象の systemd サービス名（ダミー）。停止時は全面アラート表示
DUMP1090_SERVICE_NAME="dump1090-fa.service"

# --- Display Settings ---
# e-Paper のモデル名（例: epd2in13_V4）
EPAPER_DISPLAY_TYPE="epd2in13_V4"
# 表示更新の間隔（秒）
DISPLAY_UPDATE_INTERVAL_SECONDS=300
# 使用フォントファイルのパス（環境に合わせて変更可）
DISPLAY_FONT_FILE_PATH="/usr/share/fonts/truetype/dejavu/DejaVuSans-Bold.ttf"
# フォントサイズ（px）
DISPLAY_FONT_SIZE_PIXELS=16

# --- Data Storage ---
# データ保存先のベースディレクトリ（ユーザー名は入れないダミーに）
BASE_DIRECTORY="/home/username/python3/e-ink/data"

# --- Thresholds (optional) ---
# 受信が古い/値が長時間不変のエラー判定しきい値（必要に応じて調整）
DATA_STALENESS_THRESHOLD_SECONDS=5400
NO_CHANGE_ERROR_THRESHOLD_SECONDS=3600
# RAINのオンライン判定/降り出し予兆しきい値（%）
RAIN_ONLINE_THRESHOLD_SECONDS=90
PRERAIN_THRESHOLD_PERCENT=3.0
# 将来の結露判定などで使用予定のしきい値（現状は未使用）
DEW_THRESHOLD_PERCENT=2.0

